<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Congrats">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="অভিনন্দন, আপনি সাফল্যের সাথে পাঠটি শেষ করেছেন"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/fedra_sans_medium"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="আপনি পেয়েছেন ১০ রিওয়ার্ড পয়েন্ট"
            android:textAlignment="center"
            android:fontFamily="@font/fedra"
            android:layout_marginVertical="10dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="হোমে যান"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fedra_sans_medium"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>